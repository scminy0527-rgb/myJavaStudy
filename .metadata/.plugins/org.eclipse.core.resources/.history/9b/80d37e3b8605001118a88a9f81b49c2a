package formatTask;

public class FormatTask02 {
	public static void main(String[] args) {
//		수학점수 국어점수 영어점수
//      국어점수, 영어점수, 수학점수를 받아서 서식에 맞게 출력
//      이름: 이규학
//      수학:    20점
//      국어:    40점
//      영어:    15점
//      총점:    75점
		
//		변수의 선언
		String name = null;
		int math = 0, korean = 0, english = 0, totalScore = 0;
//		점수 태그
		String scoreStr = null;
//		과목 이름 변수명
		String nameTag = null;
		String mathSubName = null,
				koreanSubName = null,
				englishSubName = null,
				totalSubName = null;
		String result = null;
		
//		변수의 초기화
		name = "이규확";
		math = 17;
		korean = 32;
		english = 15;
		totalScore = math + korean + english;
		scoreStr = " %10d점\n"; 
		nameTag = "이름: %10s\n";
		mathSubName = "수학:"+scoreStr;
		koreanSubName = "국어:"+scoreStr;
		englishSubName = "영어:"+scoreStr;
		totalSubName = "총점:"+scoreStr;
		
		
		
		
//		출력부
		System.out.printf(nameTag, name);
//		문자열 부분을 변수로만 해서 처리 해보기 시도
		System.out.printf(mathSubName, math);
		System.out.printf(koreanSubName, korean);
		System.out.printf(englishSubName, english);
		System.out.printf(totalSubName, totalScore);
	}
}
