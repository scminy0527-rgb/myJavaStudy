package formatTask;

public class FormatTask01 {
	public static void main(String[] args) {
//		식을 완성시키십시오
//		10 + 20 = 30
//		7 * 8 = 56
//		6 * 4 = 24
		
//		변수 선언 및 초기화 하는 부분
		int first1 = 10;
		int first2 = 20;
		int firstDap = 30;
		
		int second1 = 7;
		int second2 = 8;
		int secondDap = 56;
		
		int third1 = 6;
		int third2 = 4;
		int thirdDap = 24;
		
//		출력문
		System.out.printf("%d + %d = %d\n", first1, first2, firstDap);
		System.out.printf("%d * %d = %d\n", second1, second2, secondDap);
		System.out.printf("%d * %d = %d\n", third1, third2, thirdDap);
		
	}

}
